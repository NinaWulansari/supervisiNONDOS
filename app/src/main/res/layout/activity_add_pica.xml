<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_bottom_cardview"
                android:layout_marginTop="@dimen/margin_bottom_cardview"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eksterior"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_nm_dlr"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/header_pica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eksterior"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_header"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_pica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail1"
                android:layout_margin="@dimen/layout_margin"
                android:text="Ketersediaan"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_header"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_header"
                android:layout_marginRight="@dimen/tv_header">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/r1c1_pica"
                        android:layout_width="@dimen/layout_width3"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="Exist, Good" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/r1c2_pica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:text="Not exist" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/r2c1_pica"
                        android:layout_width="@dimen/layout_width3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Exist, Not Good" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/r2c2_pica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="N/A" />
                </LinearLayout>
            </RadioGroup>

            <ImageView
                android:id="@+id/im_pica"
                android:layout_width="@dimen/layout_width3"
                android:layout_height="@dimen/layout_width4"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding_left" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:text="Problem Identification"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_header" />

            <EditText
                android:id="@+id/ed_pi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin_bottom_cardview"
                android:background="@drawable/edittext_bg"
                android:lines="3"
                android:padding="@dimen/cp_padding_edittext"
                android:textColor="@color/black_1000"
                android:textSize="@dimen/tv_header" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:text="Corrective Action"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_header" />

            <EditText
                android:id="@+id/ed_ca"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin_bottom_cardview"
                android:background="@drawable/edittext_bg"
                android:lines="3"
                android:padding="@dimen/margin_right"
                android:textColor="@color/black_1000"
                android:textSize="@dimen/tv_header" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:text="Deadline"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_header" />

            <EditText
                android:id="@+id/ed_deadline"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/hint_date"
                android:textColor="@color/black_1000"
                android:textSize="@dimen/tv_header" />

            <TextView
                android:id="@+id/status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:text="Status Pica"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin_bottom_cardview"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_status_pica"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cp_spinner_high"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/margin_right"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/new_deadline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textNewDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:text="New Deadline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_header" />

                <EditText
                    android:id="@+id/ed_new_deadline"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/edittext_bg"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/hint_date"
                    android:textColor="@color/black_1000"
                    android:textSize="@dimen/tv_header" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textReason"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:text="Reason"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_header" />

                <EditText
                    android:id="@+id/ed_reason"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_bottom_cardview"
                    android:background="@drawable/edittext_bg"
                    android:lines="3"
                    android:padding="@dimen/margin_right"
                    android:textColor="@color/black_1000"
                    android:textSize="@dimen/tv_header" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textNotes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:text="Notes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_header" />

                <EditText
                    android:id="@+id/ed_notes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_bottom_cardview"
                    android:background="@drawable/edittext_bg"
                    android:lines="3"
                    android:padding="@dimen/margin_right"
                    android:textColor="@color/black_1000"
                    android:textSize="@dimen/tv_header" />
            </LinearLayout>

            <Button
                android:id="@+id/button_save_pica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/cp_textsize_medium"
                android:layout_marginLeft="@dimen/margin_right"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_button"
                android:background="@drawable/round_shape_button"
                android:text="SAVE"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>