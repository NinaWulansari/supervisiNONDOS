<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/approve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_bottom_cardview"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_dealer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wahana Makmur Sejati"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="@dimen/tv_nm_dlr" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tgl_supervisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/margin_bottom_cardview"
                        android:text="20 Oktober 2018"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/tv_tgl"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_right"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_bottom_cardview">

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="@dimen/layout_width2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_bottom_cardview"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginTop="@dimen/margin_right"
                        android:background="@drawable/round_shape_button"
                        android:backgroundTint="@color/amber_800"
                        android:padding="@dimen/padding"
                        android:text="NON DOS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_type" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>